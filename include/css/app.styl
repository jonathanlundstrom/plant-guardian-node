@import url('https://fonts.googleapis.com/css?family=Poppins:400,600|Roboto:300,300i,400,700,900');

html, body {
  height: 100%;
}

html {
  background: #0098dd;
  font-size: 100%;
}

* {
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

body {
  color: #ffffff;
  font-size: 1rem;
  font-family: 'Roboto', sans-serif;
}

.header {
  width: 100%;
  padding: 1rem 0;
  text-align: center;
  background: #ffffff;
  box-shadow: rgba(#000000, .10) 0 2px 5px;

  position: fixed;
  top: 0; left: 0;

  &__logotype {
    width: 40%;
    height: auto;
    display: inline-block;
  }
}

.sensors {
  width: 100%;
  display: flex;
  margin-top: 50vh;
  flex-flow: row wrap;
  align-items: stretch;
  justify-content: space-around;

  transform: translateY(-50%);

  &__sensor {
    flex: 1 1 100%;
    text-align: center;

    &:not(:last-child) {
      margin-bottom: 3.75rem;
    }
  }

  &__title {
    display: inline-block;
    font-weight: 900;
    font-size: .8125rem;
    margin-bottom: .625rem;
    padding: 0 5px .625rem;
    font-family: 'Roboto', sans-serif;
    text-transform: uppercase;
    border-bottom: 1px solid rgba(#ffffff, .3);
  }

  &__value {
    display: block;
    font-size: 3rem;
    font-weight: 300;
  }
}

.chart {
  width: 100%;
  height: 25vh;
  position: fixed;
  bottom: 0; left: 0;
}